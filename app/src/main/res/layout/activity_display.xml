<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayActivity">
            <android.support.constraint.ConstraintLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:id="@+id/ProfileCardView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="50dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="37dp"
                   >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bfbd85ed739ab25585f4e019efe88cc6"/>
                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_marginStart="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/ProfileCardView"
                    app:layout_constraintTop_toTopOf="@id/ProfileCardView"
                    app:layout_constraintBottom_toBottomOf="@id/ProfileCardView">

                    <TextView
                        android:id="@+id/ProfileTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Halsey"
                        android:textStyle="bold"
                        android:textColor="#4A5090"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/ProfileCardView" />

                    <TextView
                        android:id="@+id/ProfileDateText"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_height="wrap_content"
                        android:text="1 November 2020"
                        android:textColor="#B0B2C6"
                        app:layout_constraintStart_toEndOf="@id/ProfileCardView"
                        app:layout_constraintTop_toBottomOf="@id/ProfileTextView" />

                </LinearLayout>

                <TextView
                    android:id="@+id/DisplayTextView"
                    app:layout_constraintTop_toBottomOf="@id/ProfileCardView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:text="Ruang Teti "
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#4A5090"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    />
                <ImageView
                    android:id="@+id/DisplayImageView"
                    android:background="@drawable/templateoffice"
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    app:layout_constraintTop_toBottomOf="@id/DisplayTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/DisplayDeskripsiTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/DisplayImageView"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="36dp"
                    android:textColor="#4A5090"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/DisplayDeskripsiTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A workshop can introduce a new concept, spurring participants to investigate it further on their own, or can demonstrate and encourage the practice of actual methods"
                    android:textSize="14dp"
                    app:layout_constraintTop_toBottomOf="@id/DisplayDeskripsiTitle"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/DisplayKapasitasIcon"
                    app:layout_constraintTop_toBottomOf="@id/DisplayDeskripsiTextView"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="37dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_kapasitasicon"
                    />
                <TextView
                    android:id="@+id/DisplayKapasitasRuangTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/DisplayKapasitasIcon"
                    app:layout_constraintBottom_toBottomOf="@id/DisplayKapasitasIcon"
                    android:layout_marginStart="14dp"
                    android:textColor="#4A5090"
                    app:layout_constraintStart_toEndOf="@id/DisplayKapasitasIcon"/>
                <TextView
                    android:id="@+id/DisplayKapasitasRuangTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="8 orang"
                    android:textSize="14dp"
                    app:layout_constraintTop_toBottomOf="@id/DisplayKapasitasRuangTitle"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/DisplayKapasitasIcon"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/DisplayHargaIcon"
                    app:layout_constraintTop_toBottomOf="@id/DisplayKapasitasRuangTextView"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="37dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_biayaicon"
                    />
                <TextView
                    android:id="@+id/DisplayHargaTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@id/DisplayKapasitasRuangTextView"
                    android:layout_marginStart="14dp"
                    android:textColor="#4A5090"
                    app:layout_constraintStart_toEndOf="@id/DisplayKapasitasIcon"/>
                <TextView
                    android:id="@+id/DisplayHargaTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Rp120.000,00- per jam"
                    android:textSize="14dp"
                    app:layout_constraintTop_toBottomOf="@id/DisplayHargaTitle"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/DisplayKapasitasIcon"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/DisplayLokasiIcon"
                    app:layout_constraintTop_toBottomOf="@id/DisplayHargaTextView"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="37dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_lokasiicon"
                    />
                <TextView
                    android:id="@+id/DisplayLokasiTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@id/DisplayHargaTextView"
                    android:layout_marginStart="14dp"
                    android:textColor="#4A5090"
                    app:layout_constraintStart_toEndOf="@id/DisplayLokasiIcon"/>
                <TextView
                    android:id="@+id/DisplayLokasiTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Lantai 3 Gedung DTETI nomor 4A"
                    android:textSize="14dp"
                    app:layout_constraintTop_toBottomOf="@id/DisplayLokasiTitle"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/DisplayLokasiIcon"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <android.support.constraint.ConstraintLayout
                    android:onClick="booking"
                    android:layout_width="338dp"
                    android:layout_height="94dp"
                    android:background="@drawable/ic_buttonbooking"
                    app:layout_constraintTop_toBottomOf="@id/DisplayLokasiTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="37dp"
                    >
                    <TextView
                        android:id="@+id/ButtonTextViewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih hari dan jam"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/ButtonTextViewDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Klik disini untuk booking"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ButtonTextViewBold"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_kalendericon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="30dp"/>
                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>
</ScrollView>