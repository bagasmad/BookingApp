<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/RuanganImageView"
                android:layout_width="120dp"
                android:layout_height="68dp"
                android:layout_margin="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/NamaRuanganTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:text="Nama Ruangan"
                android:textColor="#4A5090"
                app:layout_constraintStart_toEndOf="@id/RuanganImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CapacityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:text="Capacity: "
                app:layout_constraintStart_toEndOf="@id/RuanganImageView"
                app:layout_constraintTop_toBottomOf="@id/NamaRuanganTextView" />

            <TextView
                android:id="@+id/HargaRuanganTextView"
                android:layout_width="76dp"
                android:layout_height="26dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Rp50.000"
                android:textColor="#FF9CB9"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>