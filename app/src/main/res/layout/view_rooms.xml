<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/RuanganImageView"
                android:layout_width="127dp"
                android:layout_height="125dp"
                android:layout_margin="14dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/NamaRuanganTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:text="Nama Ruangan"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#4A5090"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/RuanganImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                app:layout_constraintStart_toStartOf="@id/NamaRuanganTextView"
                app:layout_constraintTop_toBottomOf="@id/NamaRuanganTextView"
                android:id="@+id/CapacityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Capacity: "
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/HargaRuanganTextView"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Rp50.000"
                android:textColor="#FF9CB9"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.874"
                android:fontFamily="@font/poppins_medium"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>